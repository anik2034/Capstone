<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".bookDetails.BookDetailsFragment">

    <data>

        <variable
            name="viewModel"
            type="com.anik.capstone.bookDetails.BookDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/authorDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{viewModel.bookModel.author}"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/coverDetailsImageView"
            app:layout_constraintStart_toStartOf="@+id/coverDetailsImageView"
            app:layout_constraintTop_toBottomOf="@+id/titleDetailsTextView" />

        <TextView
            android:id="@+id/titleDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="@{viewModel.bookModel.title}"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/authorDetailsTextView"
            app:layout_constraintStart_toStartOf="@+id/authorDetailsTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/coverDetailsImageView"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_marginTop="4dp"
            android:loadImage="@{viewModel.bookModel.coverUrl}"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@+id/recyclerView2"
            app:layout_constraintStart_toStartOf="@+id/recyclerView2"
            app:layout_constraintTop_toBottomOf="@+id/authorDetailsTextView"
            tools:src="@tools:sample/avatars" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coverDetailsImageView" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>